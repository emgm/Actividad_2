<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="app.actividad_2.Second">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Cambiar texto"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="#F44336"
        android:id="@+id/btnChangeText"
        android:textColor="#FFFFFF"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segunda Activitidad"
        android:textSize="25sp"
        android:id="@+id/tvLabel"
        android:textColor="#757575"
        android:textStyle="bold"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnChangeText"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/tvLabel"
        android:layout_marginTop="20dp"
        android:id="@+id/imgSO"
        android:src="@drawable/windows"
        />

    <RadioGroup
        android:id="@+id/rgOpciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSO"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <RadioButton
            android:id="@+id/radio_opc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Opcion 1" />

        <RadioButton
            android:id="@+id/radio_opc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="opcion 2" />

        <RadioButton
            android:id="@+id/radio_opc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Opcion 3" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar imagen"
        android:textSize="16sp"
        android:background="#0097A7"
        android:id="@+id/btnChangeImage"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_above="@+id/tvLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
